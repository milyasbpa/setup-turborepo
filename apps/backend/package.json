{
  "name": "@repo/backend",
  "version": "1.0.0",
  "private": true,
  "description": "Express.js TypeScript backend for math learning app with Prisma ORM, XP/streak system, and comprehensive API documentation",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint . --max-warnings 0",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage-report": "jest --coverage --coverageReporters=html",
    "test:no-threshold": "jest --coverage --passWithNoTests",
    "test:debug": "jest --detectOpenHandles --verbose",
    "export-openapi": "tsx src/scripts/export-openapi.ts",
    "export-openapi:watch": "tsx watch src/scripts/export-openapi.ts",
    "db:setup": "./scripts/setup-db.sh",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:reset": "prisma migrate reset",
    "db:status": "prisma migrate status",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:clean": "tsx prisma/seed.ts clean",
    "db:seed:reset": "tsx prisma/seed.ts reset",
    "db:seed:list": "tsx prisma/seed.ts list",
    "db:cleanup": "tsx prisma/cleanup.ts",
    "db:seed:rollback": "tsx src/scripts/seed.ts rollback",
    "db:test": "tsx src/scripts/seed.ts test"
  },
  "dependencies": {
    "@prisma/client": "^6.13.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.1",
    "prisma": "^6.13.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.10.6",
    "@types/supertest": "^6.0.3",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.56.0",
    "jest": "^30.0.5",
    "jest-environment-node": "^30.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
