{
  "version": "1.0.0",
  "description": "Seed configuration for Math Learning App database",
  "seedOrder": [
    {
      "table": "users",
      "file": "users.json",
      "description": "Demo user account for the math learning platform",
      "dependencies": [],
      "requiredFields": ["email", "username", "firstName", "lastName"],
      "hashFields": []
    },
    {
      "table": "lessons",
      "file": "lessons.json", 
      "description": "Math learning lessons with structured progression",
      "dependencies": [],
      "requiredFields": ["title", "description", "order", "xpReward"]
    },
    {
      "table": "problems",
      "file": "problems.json",
      "description": "Math problems for each lesson",
      "dependencies": ["lessons"],
      "requiredFields": ["lessonId", "question", "problemType", "order", "correctAnswer"],
      "lookupFields": {
        "lessonSlug": {
          "table": "lessons",
          "field": "id",
          "maps_to": "lessonId"
        }
      }
    },
    {
      "table": "problemOptions",
      "file": "problem-options.json",
      "description": "Multiple choice options for problems",
      "dependencies": ["problems"],
      "requiredFields": ["problemId", "optionText", "isCorrect", "order"],
      "lookupFields": {
        "problemSlug": {
          "table": "problems",
          "field": "id",
          "maps_to": "problemId"
        }
      }
    },
    {
      "table": "userProgress",
      "file": "user-progress.json",
      "description": "User progress tracking for lessons",
      "dependencies": ["users", "lessons"],
      "requiredFields": ["userId", "lessonId"],
      "lookupFields": {
        "userEmail": {
          "table": "users",
          "field": "email",
          "maps_to": "userId"
        },
        "lessonSlug": {
          "table": "lessons",
          "field": "id",
          "maps_to": "lessonId"
        }
      }
    }
  ],
  "settings": {
    "saltRounds": 12,
    "skipExisting": true,
    "logLevel": "debug"
  }
}
