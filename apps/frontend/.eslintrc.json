{
  "root": true,
  "env": { 
    "browser": true, 
    "es2020": true 
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint"],
  "ignorePatterns": ["dist"],
  "rules": {
    "@typescript-eslint/no-unused-vars": "warn"
  }
}
