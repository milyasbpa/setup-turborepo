# Frontend Environment Variables Template
# Copy this file to .env and update the values for your environment

# ================================
# Application Configuration
# ================================

# Base URL for the application (used for SEO, canonical URLs, etc.)
VITE_BASE_URL=http://localhost:5173

# Application name and branding
VITE_APP_NAME=Turborepo Math Learning App
VITE_APP_SHORT_NAME=TurboApp
VITE_APP_DESCRIPTION=A modern React application with PWA capabilities and math learning features
VITE_SITE_NAME=TurboApp

# ================================
# API Configuration
# ================================

# Backend API URL (for production deployments)
VITE_API_URL=http://localhost:3002
VITE_API_BASE_PATH=/api

# API timeout in milliseconds
VITE_API_TIMEOUT=10000

# OpenAPI schema URL for type generation
VITE_OPENAPI_URL=http://localhost:3002/api/docs.json

# ================================
# Development & Debug Configuration
# ================================

# Enable React Query DevTools (true/false)
VITE_ENABLE_REACT_QUERY_DEVTOOLS=true

# Enable debug logging (true/false)
VITE_DEBUG_MODE=true

# Enable i18n debug mode (true/false)
VITE_I18N_DEBUG=true

# Enable service worker in development (true/false)
VITE_PWA_DEV_ENABLED=true

# ================================
# Progressive Web App (PWA) Configuration
# ================================

# PWA theme colors
VITE_PWA_THEME_COLOR=#61dafb
VITE_PWA_BACKGROUND_COLOR=#282c34

# VAPID public key for push notifications (get from Firebase or web-push)
VITE_VAPID_PUBLIC_KEY=your-vapid-public-key-here

# Service worker registration type (autoUpdate | prompt | disabled)
VITE_SW_REGISTER_TYPE=prompt

# ================================
# SEO & Social Media Configuration
# ================================

# Default SEO keywords
VITE_SEO_KEYWORDS=React,TypeScript,Vite,Math Learning,Education,PWA,i18n

# Open Graph default image
VITE_OG_IMAGE=/og-image.png

# Twitter handle for Twitter Card metadata
VITE_TWITTER_SITE=@turboapp
VITE_TWITTER_CREATOR=@turboapp

# ================================
# Analytics Configuration
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX
VITE_GTM_CONTAINER_ID=GTM-XXXXXXX
VITE_FB_PIXEL_ID=123456789012345
VITE_HOTJAR_ID=1234567
VITE_SENTRY_DSN=https://your-dsn@sentry.io/project-id
VITE_MIXPANEL_TOKEN=your-mixpanel-token
VITE_ANALYTICS_DEV_ENABLED=true

# ================================
# Feature Flags
# ================================

# Enable/disable specific features
VITE_FEATURE_RECOMMENDATIONS=true
VITE_FEATURE_NOTIFICATIONS=true
VITE_FEATURE_OFFLINE_MODE=true
VITE_FEATURE_ANALYTICS=true

# ================================
# Third-party Integrations
# ================================

# Sentry DSN for error tracking
VITE_SENTRY_DSN=

# PostHog API key for product analytics
VITE_POSTHOG_KEY=
VITE_POSTHOG_HOST=https://app.posthog.com

# ================================
# Internationalization (i18n)
# ================================

# Default language
VITE_DEFAULT_LANGUAGE=en

# Supported languages (comma-separated)
VITE_SUPPORTED_LANGUAGES=en,id

# ================================
# Performance & Optimization
# ================================

# Enable code splitting (true/false)
VITE_ENABLE_CODE_SPLITTING=true

# Chunk size warning limit in KB
VITE_CHUNK_SIZE_WARNING_LIMIT=500

# Enable build analyzer (true/false)
VITE_ENABLE_BUNDLE_ANALYZER=false

# ================================
# Security
# ================================

# Content Security Policy nonce (auto-generated if not provided)
VITE_CSP_NONCE=

# Enable secure headers (true/false)
VITE_ENABLE_SECURE_HEADERS=true
